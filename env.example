# Application Settings
APP_NAME=RAG
APP_VERSION=1.0.0

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_URL=https://api.openai.com/v1

# Cohere Configuration (optional)
COHERE_API_KEY=your-cohere-api-key-here

# File Upload Settings
FILE_ALLOWED_TYPES=["pdf", "txt"]
FILE_MAX_SIZE=10485760  # 10MB
FILE_DEFAULT_CHUNK_SIZE=8192

# Database Configuration
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your-db-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_MAIN_DATABASE=minirag

# LLM Backend Configuration
GENERATION_BACKEND=openai
EMBEDDING_BACKEND=openai
GENERATION_MODEL_ID=gpt-3.5-turbo
EMBEDDING_MODEL_ID=text-embedding-3-large
EMBEDDING_MODEL_SIZE=3072

# LLM Model Configuration (Optional - will use defaults if not set)
GENERATION_MODEL_ID_LITERAL=["gpt-3.5-turbo", "gpt-4"]
INPUT_DAFAULT_MAX_CHARACTERS=4000
GENERATION_DAFAULT_MAX_TOKENS=1000
GENERATION_DAFAULT_TEMPERATURE=0.7

# Vector Database Configuration
VECTOR_DB_BACKEND=qdrant
VECTOR_DB_PATH=./vector_db
VECTOR_DB_DISTANCE_METHOD=cosine
VECTOR_DB_PGVEC_INDEX_THRESHOLD=100

# Vector Database Backend Options (Optional)
VECTOR_DB_BACKEND_LITERAL=["qdrant", "pgvector"]

# Language Settings
PRIMARY_LANG=en
DEFAULT_LANG=en

# Authentication Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30 